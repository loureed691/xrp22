# KuCoin API Credentials
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_api_passphrase_here

# Bot Configuration
INITIAL_BALANCE=100
LEVERAGE=11
SYMBOL=XRPUSDTM
USE_TESTNET=true

# Risk Management
MAX_POSITION_SIZE_PERCENT=80
STOP_LOSS_PERCENT=5
TAKE_PROFIT_PERCENT=8
TRAILING_STOP_PERCENT=3

# Funding Strategy (Better balance management)
# When enabled, uses intelligent position sizing based on account balance, risk, and market conditions
USE_FUNDING_STRATEGY=true
# Minimum % of balance to always keep in reserve (emergency fund)
MIN_BALANCE_RESERVE_PERCENT=20
# Base % of available balance to use per position (will be adjusted based on risk)
BASE_POSITION_SIZE_PERCENT=15
# Maximum % of available balance for a single position (with new funding strategy)
MAX_POSITION_SIZE_PERCENT_NEW=40
# Minimum % of available balance for a single position
MIN_POSITION_SIZE_PERCENT=5
# Minimum position value in USD (ensures each trade meets a minimum size, e.g., $25)
# Set to 0 to disable minimum position value
MIN_POSITION_VALUE_USD=25

# Trading Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
EMA_SHORT=12
EMA_LONG=26
MACD_SIGNAL=9

# Advanced Features - SMART AUTO-DETECTION
# The bot now automatically enables features based on your configuration!

# Web Dashboard
# Set to 'true' to enable the web dashboard
ENABLE_WEB_DASHBOARD=false
WEB_DASHBOARD_PORT=5000

# Telegram Notifications
# AUTO-ENABLED: If both token and chat_id are provided, notifications are automatically enabled
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ML-based Signals
# Set to 'true' to enable ML-based signal generation
USE_ML_SIGNALS=false

# Dynamic Leverage
# AUTO-ENABLED: If you set MIN/MAX leverage different from base leverage, dynamic leverage is automatically enabled
# Or explicitly set to 'true' or 'false', or leave as 'auto' for smart detection
ENABLE_DYNAMIC_LEVERAGE=auto
MIN_LEVERAGE=5
MAX_LEVERAGE=20

# Multiple Trading Pairs
# AUTO-ENABLED: Comma-separate multiple pairs to enable multi-pair trading
# If you specify multiple pairs, the bot automatically uses 'best' strategy (focuses on most profitable pair)
# For single pair, just put one: TRADING_PAIRS=XRPUSDTM
TRADING_PAIRS=XRPUSDTM
# Allocation strategy: equal, weighted, dynamic, best
# 'best' - automatically trades only the most profitable pair (AUTO-SELECTED for multi-pair)
# Leave blank to use auto-detection based on number of pairs
ALLOCATION_STRATEGY=
